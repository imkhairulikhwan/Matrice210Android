<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtView_console"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scrollbars="vertical" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </TableRow>

        <EditText
            android:id="@+id/editTxt_command"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="14dp"
            android:inputType="textPersonName"
            android:text="@string/moc_default_command" />

        <Button
            android:id="@+id/btn_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="14dp"
            android:textAllCaps="false"
            android:textColor="@color/background_blue"
            android:textSize="14sp"
            android:text="@string/moc_send_command" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editTxt_length"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:padding="14dp"
                android:text="@string/moc_default_length"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/editTxt_delay"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:padding="14dp"
                android:text="@string/moc_default_speed"
                android:inputType="numberDecimal" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_up_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="14dp"
            android:textAllCaps="false"
            android:textColor="@color/background_blue"
            android:textSize="14sp"
            android:text="@string/moc_up_test" />

        <Button
            android:id="@+id/btn_ackUp_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="14dp"
            android:textAllCaps="false"
            android:textColor="@color/background_blue"
            android:textSize="14sp"
            android:text="@string/moc_ackUp_test"
            />

        <Button
            android:id="@+id/btn_reset_test_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="14dp"
            android:textAllCaps="false"
            android:textColor="@color/background_blue"
            android:textSize="14sp"
            android:text="@string/moc_reset_counter" />
        <TextView
            android:id="@+id/txtView_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="..." />

    </TableLayout>


</LinearLayout>